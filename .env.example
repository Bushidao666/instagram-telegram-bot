# Backend Configuration
BASE_URL=https://your-backend.railway.app
FRONTEND_URL=https://your-frontend.railway.app

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://your-backend.railway.app

# Railway Configuration (set in Railway dashboard)
PORT=8000  # Backend port (Railway will override this)
# PORT=3000  # Frontend port (Railway will override this)

# Optional: Database Configuration
DATABASE_URL=sqlite:///app/database/database.db

# Optional: Media Storage
MEDIA_DIR=/app/media
SESSIONS_DIR=/app/sessions

# Optional: Instagram Session (configure via API)
# INSTAGRAM_USERNAME=your_instagram_username
# INSTAGRAM_PASSWORD=your_instagram_password

# Optional: Webhook Configuration
# DEFAULT_WEBHOOK_URL=https://your-webhook-endpoint.com
# DEFAULT_WEBHOOK_TOKEN=your_webhook_token

# Optional: Scheduler Configuration
# DEFAULT_CHECK_INTERVAL=60  # minutes
# CLEANUP_INTERVAL=1440  # minutes (24 hours)

# Optional: Security
# SECRET_KEY=your-secret-key-here
# ALLOWED_ORIGINS=https://your-frontend.railway.app,https://your-domain.com